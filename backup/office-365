        </div>: 8px;">
                    <strong>Phase 6:</strong> Migration & Go-Live<br>
                    <small>Data migration, training, testing</small>
                </div>
            </div>
            <div class="info-box">
                <strong>This is a preview of the full implementation wizard.</strong> The complete version includes all phases with detailed screenshots, troubleshooting guides, and interactive checklists for every step of the Microsoft 365 setup process.
            </div>
        </div>
    </div>

    <script>
        let currentPhase = 1;
        const totalPhases = 6;
        const phaseProgress = {
            1: { completed: 0, total: 8 },
            2: { completed: 0, total: 6 },
            3: { completed: 0, total: 5 },
            4: { completed: 0, total: 7 },
            5: { completed: 0, total: 6 },
            6: { completed: 0, total: 8 }
        };

        function togglePhase(phaseNum) {
            const content = document.getElementById(`phase-${phaseNum}-content`);
            const header = content.parentElement.querySelector('.phase-header');
            
            if (content.classList.contains('active')) {
                content.classList.remove('active');
                header.classList.remove('expanded');
            } else {
                // Close all phases first
                document.querySelectorAll('.phase-content').forEach(el => {
                    el.classList.remove('active');
                    el.parentElement.querySelector('.phase-header').classList.remove('expanded');
                });
                
                // Open selected phase
                content.classList.add('active');
                header.classList.add('expanded');
                currentPhase = phaseNum;
                updateNavigation();
            }
        }

        function toggleStep(checkbox) {
            const step = checkbox.parentElement;
            const isCompleted = checkbox.classList.contains('checked');
            
            if (isCompleted) {
                checkbox.classList.remove('checked');
                step.classList.remove('completed');
            } else {
                checkbox.classList.add('checked');
                step.classList.add('completed');
            }
            
            updatePhaseProgress();
            updateOverallProgress();
        }

        function updatePhaseProgress() {
            for (let phase = 1; phase <= totalPhases; phase++) {
                const phaseElement = document.querySelector(`[data-phase="${phase}"]`);
                if (phaseElement) {
                    const completedSteps = phaseElement.querySelectorAll('.step-checkbox.checked').length;
                    const totalSteps = phaseElement.querySelectorAll('.step-checkbox').length;
                    
                    phaseProgress[phase].completed = completedSteps;
                    phaseProgress[phase].total = totalSteps;
                    
                    // Update phase status text
                    const statusElement = document.getElementById(`phase-${phase}-status`);
                    if (statusElement) {
                        statusElement.textContent = `${completedSteps}/${totalSteps} completed`;
                    }
                    
                    // Update phase number indicator
                    const numberElement = document.getElementById(`phase-${phase}-number`);
                    if (numberElement) {
                        if (completedSteps === totalSteps && totalSteps > 0) {
                            numberElement.classList.add('completed');
                            numberElement.textContent = '‚úì';
                        } else {
                            numberElement.classList.remove('completed');
                            numberElement.textContent = phase;
                        }
                    }
                }
            }
        }

        function updateOverallProgress() {
            let totalCompleted = 0;
            let totalSteps = 0;
            
            for (let phase = 1; phase <= totalPhases; phase++) {
                totalCompleted += phaseProgress[phase].completed;
                totalSteps += phaseProgress[phase].total;
            }
            
            const percentage = totalSteps > 0 ? Math.round((totalCompleted / totalSteps) * 100) : 0;
            
            document.getElementById('progress-fill').style.width = `${percentage}%`;
            document.getElementById('progress-text').textContent = 
                `${percentage}% Complete - ${totalCompleted}/${totalSteps} steps completed`;
        }

        function nextPhase() {
            if (currentPhase < totalPhases) {
                togglePhase(currentPhase + 1);
            }
        }

        function previousPhase() {
            if (currentPhase > 1) {
                togglePhase(currentPhase - 1);
            }
        }

        function updateNavigation() {
            document.getElementById('prev-btn').disabled = (currentPhase === 1);
            document.getElementById('next-btn').disabled = (currentPhase === totalPhases);
            document.getElementById('phase-indicator').textContent = `Phase ${currentPhase} of ${totalPhases}`;
        }

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Open first phase by default
            togglePhase(1);
            updatePhaseProgress();
            updateOverallProgress();
        });

        // Save progress to localStorage
        function saveProgress() {
            const progress = {};
            document.querySelectorAll('.step-checkbox.checked').forEach((checkbox, index) => {
                const step = checkbox.closest('.step');
                const phaseContainer = checkbox.closest('.phase-container');
                const phaseNum = phaseContainer.getAttribute('data-phase');
                const stepIndex = Array.from(phaseContainer.querySelectorAll('.step')).indexOf(step);
                
                if (!progress[phaseNum]) progress[phaseNum] = [];
                progress[phaseNum].push(stepIndex);
            });
            
            localStorage.setItem('kompas-nordic-progress', JSON.stringify(progress));
        }

        // Load progress from localStorage
        function loadProgress() {
            const saved = localStorage.getItem('kompas-nordic-progress');
            if (saved) {
                const progress = JSON.parse(saved);
                
                Object.keys(progress).forEach(phaseNum => {
                    const phaseContainer = document.querySelector(`[data-phase="${phaseNum}"]`);
                    const steps = phaseContainer.querySelectorAll('.step');
                    
                    progress[phaseNum].forEach(stepIndex => {
                        if (steps[stepIndex]) {
                            const checkbox = steps[stepIndex].querySelector('.step-checkbox');
                            toggleStep(checkbox);
                        }
                    });
                });
            }
        }

        // Auto-save progress when steps are completed
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('step-checkbox')) {
                setTimeout(saveProgress, 100); // Small delay to ensure state is updated
            }
        });

        // Load saved progress on page load
        document.addEventListener('DOMContentLoaded', loadProgress);
    </script>
</body>
</html>
